<!DOCTYPE HTML>
<html>
    <head>
        <meta charset = utf-8>
        <title>Pizzeria</title>
    </head>
    <body>
        <ul>
            <li>
                <a href="index.php">Home</a>
            </li>
            <li>
                <a href="menutonen.php">Menu</a>
            </li>
            <li>
                <a id="active" href="winkelmandjetonen.php">Winkelmandje</a>
            </li>
            <li>
                {% if aangemeld %}
                    <a href="index.php?action=uitloggen">Log uit</a>
                {% else %}
                    <a href="inloggen.php">Log in</a>
                {% endif %}
            </li>
        </ul>
        <h1>Winkelmandje</h1>
        {% if leeg == false %}
            <table>
                {% for key, product in winkelmandje%}
                    <tr>
                        <td>{{ product.naam }}</td>
                        <td>({{ product.samenstelling }})</td>
                        {% if aangemeld == true and klant.promotie == 1 %}
                            <td>&euro; {{ product.promotie }}</td>
                        {% else %}
                            <td>&euro; {{ product.prijs }}</td>
                        {% endif %}
                        <td><a href="winkelmandjetonen.php?verwijder={{ key }}">X</a></td>
                    </tr>
                {% endfor %}
                <tr>
                    <td></td>
                    <td></td>
                    <td>&euro; {{ totaalprijs }}</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td>
                        <a href="afrekenen.php"><button>Afrekenen</button></a>
                    </td>
                </tr>
            </table>
        {% else %}
            <p>Uw winkelmandje is leeg</p>
        {% endif %}
    </body>
</html>
